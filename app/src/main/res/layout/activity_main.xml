<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradasi"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The COCONUT"
            android:fontFamily="sans-serif-condensed-light"

            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:layout_above="@id/lyt1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="44dp"
            android:layout_centerVertical="true"/>

    <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="400dp"
            android:background="@drawable/terserah"
            android:layout_centerInParent="true"
            android:id="@+id/lyt1">
        <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/pramuka"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:id="@+id/tunas"/>
        <Button
                android:text="GO SCOUT"
                android:background="#8e2891"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:layout_below="@+id/tunas"
                android:layout_marginTop="59dp"
                android:layout_centerInParent="true" android:layout_centerVertical="true"/>


    </RelativeLayout>
</RelativeLayout>